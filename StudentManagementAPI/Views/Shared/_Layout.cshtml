<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[""] Course Enrollment Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementAPI.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin: 0;
        }

            .navbar-brand img {
                height: 150px;
                object-fit: contain;
            }

        .navbar {
            justify-content: center;
        }

        footer {
            padding-top: 0.5rem; /* Smaller space above the footer */
            padding-bottom: 0.5rem; /* Smaller space below the footer */
            text-align: center; /* Centers footer content */
            position: relative;
            z-index: 10;
            font-size: 0.9rem; /* Optional: smaller font size for footer content */
        }

            footer .container {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 0.5rem; /* Space between the footer content */
            }

                footer .container a {
                    margin: 0; /* Remove margin from links */
                    padding: 0.2rem; /* Optional padding to space out the links */
                    text-decoration: none; /* Optional: removes underline from links */
                }

                    footer .container a:hover {
                        text-decoration: underline; /* Optional: underline links on hover */
                    }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/uptm.png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
   
                <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a> |
                <a asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
