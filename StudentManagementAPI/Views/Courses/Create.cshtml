@model StudentManagementAPI.Models.Course

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create New Course</h2>
            <form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label asp-for="CourseCode" class="control-label">Course Code</label>
                    <input asp-for="CourseCode" class="form-control" />
                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CourseName" class="control-label">Course Name</label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
