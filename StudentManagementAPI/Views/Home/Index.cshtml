@{
    ViewData["Title"] = "Welcome to Course Enrollment Management System";
}

<div class="jumbotron text-center bg-light p-5">
    <div class="container">
        <h1 class="display-4">Welcome to UPTM <br />Course Enrollment Management System</h1>
        <p class="lead">Your one-stop solution to manage courses and student enrollment effortlessly.</p>
        <hr class="my-4">
        <p>Get started by exploring our system features:</p>
        <div class="d-flex justify-content-center mt-4">
            <!-- Manage Students Button with Icon -->
            <a class="btn btn-primary btn-lg mx-2" href="@Url.Action("Index", "Students")">
                <i class="fas fa-users fa-lg"></i> Manage Students
            </a>
            <!-- Manage Courses Button with Icon -->
            <a class="btn btn-success btn-lg mx-2" href="@Url.Action("Index", "Courses")">
                <i class="fas fa-book fa-lg"></i> Manage Courses
            </a>
        </div>

        <!-- Centered View Page Button with Red Color and Icon -->
        <div class="mt-4">
            <a class="btn btn-danger btn-lg" href="@Url.Action("ViewPage", "Home")">
                <i class="fas fa-chart-line fa-lg"></i> View Report
            </a>
        </div>
    </div>
</div>

<div class="container mt-3">
    <h2 class="text-center">Why Choose Our System?</h2>
    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <i class="fas fa-user-graduate fa-3x text-primary"></i>
            <h4 class="mt-3">Easy Enrollment</h4>
            <p>Streamline the student enrollment process with a <br> user-friendly interface.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-book fa-3x text-success"></i>
            <h4 class="mt-3">Comprehensive Course Management</h4>
            <p>Organize courses with detailed information and <br> real-time updates.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fas fa-chart-line fa-3x text-danger"></i>
            <h4 class="mt-3">Performance Insights</h4>
            <p>Track and monitor enrollment data to improve <br> decision-making.</p>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
