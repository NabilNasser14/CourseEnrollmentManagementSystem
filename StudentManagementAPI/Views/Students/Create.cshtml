@model StudentManagementAPI.Models.Student

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create New Student</h2>
            <form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label asp-for="StudentNo" class="control-label">Student Number</label>
                    <input asp-for="StudentNo" class="form-control" />
                    <span asp-validation-for="StudentNo" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StudentName" class="control-label">Student Name</label>
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StudentEmail" class="control-label">Student Email</label>
                    <input asp-for="StudentEmail" class="form-control" />
                    <span asp-validation-for="StudentEmail" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StudentContactNumber" class="control-label">Contact Number</label>
                    <input asp-for="StudentContactNumber" class="form-control" />
                    <span asp-validation-for="StudentContactNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StudentEnrollmentDate" class="control-label">Enrollment Date</label>
                    <input asp-for="StudentEnrollmentDate" class="form-control" type="date" />
                    <span asp-validation-for="StudentEnrollmentDate" class="text-danger"></span>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
