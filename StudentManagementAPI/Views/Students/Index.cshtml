@model IEnumerable<StudentManagementAPI.Models.Student>

<div class="container mt-4">

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Add New Student</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Student Number</th>
                <th>Student Name</th>
                <th>Student Email</th>
                <th>Student Contact Number</th>
                <th>Student Enrollment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentNo</td>
                    <td>@student.StudentName</td>
                    <td>@student.StudentEmail</td>
                    <td>@student.StudentContactNumber</td>
                    <td>@student.StudentEnrollmentDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.StudentID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@student.StudentID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-outline-dark">Back</a>
    </div>
</div>
